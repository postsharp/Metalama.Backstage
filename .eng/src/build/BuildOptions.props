<Project>

    <!-- C# Compiler options-->
    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <!-- Output path -->
    <PropertyGroup>
        <OutputPath>$(MSBuildThisFileDirectory)..\..\..\artifacts\bin\$(Configuration)</OutputPath>
    </PropertyGroup>

    <!-- Obfuscation -->
    <PropertyGroup>
        <Obfuscate Condition="'$(Obfuscate)'=='' AND '$(Configuration)'=='Release'">True</Obfuscate>
    </PropertyGroup>

    <!-- TeamCity integration -->
    <PropertyGroup Condition=" '$(ContinuousIntegrationBuild)' == '' ">
        <!-- Copied from TeamCity.VSTest.TestAdapter package. -->
        <ContinuousIntegrationBuild Condition=" '$(TEAMCITY_PROJECT_NAME)' != '' or '$(TEAMCITY_VERSION)' != '' ">True</ContinuousIntegrationBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="TeamCity.Dotnet.Integration" Version="1.0.18" Condition="'$(ContinuousIntegrationBuild)' == 'True'">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Include="TeamCity.VSTest.TestAdapter" Version="1.0.26" Condition="'$(ContinuousIntegrationBuild)' == 'True' And '$(IsTestProject)' == 'True'">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
    </ItemGroup>

</Project>