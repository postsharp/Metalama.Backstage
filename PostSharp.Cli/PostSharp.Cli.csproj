<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>postsharp</AssemblyName>
    <PackageId>PostSharp.Cli</PackageId>
  </PropertyGroup>

  <PropertyGroup>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <WarningLevel>4</WarningLevel>
    <PackAsTool>true</PackAsTool>
    <PackageType>DotNetCliTool</PackageType>
    <ToolCommandName>postsharp</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="5.0.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.21216.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Commands\Compiler\" />
    <Folder Include="Commands\Ceip\" />
    <Folder Include="Session\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PostSharp.Backstage.Settings\PostSharp.Backstage.Settings.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="PostSharp.Cli.Tests" />
  </ItemGroup>

</Project>
