<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
		<!-- .NET Framework and .NET Core build are there so we can execute a new process. (E.g. for telemetry upload.) -->
        <TargetFrameworks>netframework4.7.2;net5.0</TargetFrameworks>
        <RootNamespace>Metalama.Backstage</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<OutputType>exe</OutputType>
		<UseAppHost>false</UseAppHost>
    </PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='netframework4.7.2'">
		<Reference Include="System.Net.Http" />
	</ItemGroup>

    <ItemGroup>
      <None Remove="Telemetry\Diagnostics-Public.csp" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Telemetry\Diagnostics-Public.csp" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Bcl.HashCode" Version="$(MicrosoftBclHashCodeVersion)" />
        <PackageReference Include="Newtonsoft.Json" Version="$(NewtonsoftJsonVersion)" />
        <PackageReference Include="System.IO.Packaging" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Metalama.Backstage.Tests" />
        <InternalsVisibleTo Include="Metalama.Backstage.TestHelpers" />
    </ItemGroup>

</Project>
