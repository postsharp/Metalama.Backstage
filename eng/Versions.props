<Project>

    <!-- Set the default version -->
    <Import Project="MainVersion.props" />
    
    <PropertyGroup>
        <PostSharpBackstageSettingsVersion>$(MainVersion)$(PackageVersionSuffix)</PostSharpBackstageSettingsVersion>
        <PostSharpBackstageSettingsAssemblyVersion>$(MainVersion)</PostSharpBackstageSettingsAssemblyVersion>
    </PropertyGroup>

    <!-- Versions of dependencies -->
    <PropertyGroup>
        <PostSharpEngineeringVersion>1.0.33-preview</PostSharpEngineeringVersion>
        <NewtonsoftJsonVersion>13.0.1</NewtonsoftJsonVersion>
        <MicrosoftBclHashCodeVersion>1.1.1</MicrosoftBclHashCodeVersion>
    </PropertyGroup>

    <!-- Import overrides for the local build -->
    <Import Project="Versions.g.props" Condition="Exists('Versions.g.props')" />

    <!-- Other properties dependent on the versions set above. -->
    <PropertyGroup>
        <AssemblyVersion>$(PostSharpBackstageSettingsAssemblyVersion)</AssemblyVersion>
        <Version>$(PostSharpBackstageSettingsVersion)</Version>
    </PropertyGroup>

</Project>
